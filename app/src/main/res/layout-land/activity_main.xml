<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dev.corruptedark.openchaoschess.MainActivity">

    <ImageView
        android:id="@+id/singleplayer_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="true"
        android:onClick="singleplayerButtonClicked"
        android:scaleType="centerCrop"
        android:text="@string/main_play"
        app:srcCompat="@drawable/ic_chaotic_button" />

    <TextView
        android:id="@+id/singleplayerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/singleplayer_button"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/unlock"
        android:paddingBottom="10dp"
        android:text="@string/main_play"
        android:textSize="48sp" />

    <ImageView
        android:id="@+id/multiplayer_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/singleplayer_button"
        android:layout_marginBottom="-155dp"
        android:adjustViewBounds="true"
        android:onClick="multiplayerButtonClicked"
        android:scaleType="centerCrop"
        android:text="@string/about"
        android:textSize="25sp"
        app:srcCompat="@drawable/ic_chaotic_button" />

    <TextView
        android:id="@+id/multiplayerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/multiplayer_button"
        android:fontFamily="@font/unlock"
        android:paddingBottom="10dp"
        android:layout_marginLeft="30dp"
        android:text="@string/about"
        android:textSize="48sp" />

    <ImageView
        android:id="@+id/achievements_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@id/multiplayer_button"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="220dp"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="true"
        android:onClick="issuesButtonClicked"
        android:scaleType="centerCrop"
        android:text="@string/issues"
        android:textSize="25sp"
        app:srcCompat="@drawable/ic_chaotic_button"
        tools:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/achievementsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/achievements_button"
        android:layout_marginStart="240dp"
        android:layout_marginLeft="240dp"
        android:fontFamily="@font/unlock"
        android:paddingBottom="10dp"
        android:text="@string/issues"
        android:textSize="48sp" />

    <ImageView
        android:id="@+id/settings_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@id/achievements_button"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="true"
        android:onClick="quitButtonClicked"
        android:scaleType="centerCrop"
        android:text="@string/quit"
        android:textSize="25sp"
        app:srcCompat="@drawable/ic_chaotic_button" />


    <TextView
        android:id="@+id/quitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/settings_button"
        android:layout_marginStart="270dp"
        android:layout_marginLeft="270dp"
        android:fontFamily="@font/unlock"
        android:paddingBottom="10dp"
        android:text="@string/quit"
        android:textSize="48sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_filledknight"
        android:id="@+id/knight_button"
        android:background="#00000000"
        android:onClick="knightButtonClicked"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/chaos_icon"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/chaos_icon" />

    <ImageView
        android:id="@+id/chaos_title"
        android:layout_width="575dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/chaos_icon"
        android:layout_marginStart="148dp"
        android:layout_marginLeft="142dp"
        android:layout_marginBottom="30dp"
        android:paddingTop="20dp"
        app:srcCompat="@drawable/chaos_title" />
    </RelativeLayout>


