<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dev.corruptedark.openchaoschess.MainActivity">

    <ImageView
        android:id="@+id/chaos"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="-70dp"
        android:gravity="center"
        app:srcCompat="@drawable/chaos"
        tools:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/main_play_button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/chaos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="true"
        android:onClick="mainPlayButtonClicked"
        android:scaleType="centerCrop"
        android:text="@string/main_play"
        app:srcCompat="@drawable/ic_chaotic_button" />

    <TextView
        android:id="@+id/mainPlayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/main_play_button"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/unlock"
        android:paddingBottom="10dp"
        android:text="@string/main_play"
        android:textSize="48sp" />

    <ImageView
        android:text="@string/about"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/about_button"
        android:textSize="25sp"
        android:layout_below="@+id/main_play_button"
        android:onClick="aboutButtonClicked"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_chaotic_button"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/aboutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/about_button"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/unlock"
        android:paddingBottom="10dp"
        android:text="@string/about"
        android:textSize="48sp" />

    <ImageView
        android:text="@string/issues"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/ic_chaotic_button"
        android:id="@+id/issues_button"
        android:textSize="25sp"
        android:layout_below="@+id/about_button"
        android:onClick="issuesButtonClicked"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"

        />

    <TextView
        android:id="@+id/issuesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/issues_button"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/unlock"
        android:paddingBottom="10dp"
        android:text="@string/issues"
        android:textSize="48sp" />

    <ImageView
        android:text="@string/quit"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/ic_chaotic_button"
        android:id="@+id/quit_button"
        android:layout_below="@+id/issues_button"
        android:textSize="25sp"
        android:onClick="quitButtonClicked"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />


    <TextView
        android:id="@+id/quitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/quit_button"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/unlock"
        android:paddingBottom="10dp"
        android:text="@string/quit"
        android:textSize="48sp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_medal"
        android:id="@+id/achievements_button"
        android:scaleType="fitCenter"
        android:background="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:onClick="achievementsClicked"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_settings"
        android:id="@+id/settings_button"
        android:scaleType="fitCenter"
        android:background="@color/colorAccent"
        android:layout_alignParentLeft="true"
        android:onClick="settingsButtonClicked"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_filledknight"
        android:id="@+id/knight_button"
        android:background="#00000000"
        android:onClick="knightButtonClicked"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
